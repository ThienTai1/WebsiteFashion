@model WebsiteFashion.Models.Product

@{
    ViewData["Title"] = "Search Result";
}

@if (Model != null)
{
    <h2>Search Result</h2>

    <div class="card" style="width: 18rem;">
        <img src="@Model.ImageUrl" class="card-img-top" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Price: @Model.Price.ToString("#,##0") Vnđ</p>
            <p class="card-text">Description: @Model.Description</p>
            <p class="card-text">Category: @Model.Category?.Name</p>
            <a href="#" class="btn btn-primary">View Details</a>
        </div>
    </div>
}
else
{
    <p>No results found.</p>
}
