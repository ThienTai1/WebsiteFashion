@model WebsiteFashion.Models.Order

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                var requiredFields = form.querySelectorAll('[required]');
                var isValid = true;

                requiredFields.forEach(function (field) {
                    if (field.value.trim() === '') {
                        isValid = false;
                        alert('Please fill out all required fields.');
                        event.preventDefault();
                        return;
                    }
                });

                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
}

<h2>Checkout</h2>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control" required></textarea>
    </div>
    <input type="submit" name="payment" class="btn btn-primary text-uppercase text-black w-100 mt-2" value="Thanh toán COD">
    <input type="submit" name="payment" class="btn border-secondary text-uppercase text-primary w-100 mt-2" value="Thanh toán VNPay">
</form>