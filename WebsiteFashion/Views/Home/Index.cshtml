@model IEnumerable<WebsiteFashion.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
    int count = 0;
}

<html>
<body>
    <main>
        <!-- Banner layout 1 Start-->
        <div class="position-relative overflow-hidden text-center" style="background-image: url('https://livedemo00.template-help.com/prestashop_54008/modules/homeslider/images/slide-1.jpg'); background-size: cover; background-position: center; height:400px">
            <div class="mark" style="background-color: rgba(200, 200, 200, 0.3); width:max-content, height:max-content">
                <div class="col-md-5 p-lg-5 mx-auto my-5 text-white">
                    <h1 class="display-4 fw-normal">Punny headline</h1>
                    <p class="lead fw-normal">And an even wittier subheading to boot. Jumpstart your marketing efforts with this example based on Apple’s marketing pages.</p>
                    <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" >Buy Now</a>
                </div>
            </div>
        </div>
        <!-- Banner layout End-->

        <!-- Products Start-->
        <div class=" row row-cols-1 row-cols-md-3 align-content-between justify-content-between pb-5">
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-4 pt-5">
                <h3 class="">Top</h3>
                <img src="https://i.pinimg.com/236x/76/66/c4/7666c4dc655f0e7622a13163158faea0.jpg" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Top" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="Ao">Xem them</a>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-2 pt-5">
                <h3 class="">Bottom</h3>
                <img src="https://i.pinimg.com/236x/da/ed/4c/daed4cc312f34383a0cadf51a0f9d733.jpg" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Bottom" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="Quan">Xem them</a>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-2 pt-5">
                <h3 class="">Bag</h3>
                <img src="https://i.pinimg.com/564x/9e/d7/60/9ed760efb0f5a8a5b4d1b591c5a935c1.jpg" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Bag" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="balo">Xem them</a>
            </div>
        </div>
        <!-- Products End-->
        <!-- Banner layout 2 Start-->
        <div class="position-relative overflow-hidden text-center" style="background-image: url('https://livedemo00.template-help.com/prestashop_54008/modules/tmmediaparallax/media/img-1.jpg'); background-size: cover; background-position: center; height:400px">
            <div class="col-md-5 p-lg-5 mx-auto my-5 text-white">
                <h1 class="display-4 fw-normal">Save in Style</h1>
                <p class="lead fw-normal">With the discount clothing!</p>
                <a class="btn btn-outline-light fw-bold" asp-area="" asp-action="" asp-controller="">Xem them</a>
            </div>
        </div>
        <!-- Banner layout 2 End-->
        <!-- Group Products Start-->
        <div class="p-2">
            <div class="pt-5">
                <h1>Reference</h1>
                <section class="py-2">
                    <div class="container px-1 mt-5">

                        <div class="row gx-4 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                            @foreach (var item in Model)
                            {
                                @if (count < 8)
                                {

                                    <div class="col mb-5">
                                        <div class="card gap-3" style="width: 16rem; max-height:500px;">
                                            <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Display" asp-route-productId="@item.Id">
                                                <img src="@item.ImageUrl" class="card-img-top" alt="..." style="max-height: 280px;">
                                            </a>

                                            <div class="card-body">
                                                <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Display" asp-route-productId="@item.Id">
                                                    <h5 class="card-title">
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </h5>
                                                    <div class="d-flex">
                                                        <span>Price: </span>
                                                        <p class="mx-3">@item.Price.ToString("#,##0") Vnđ</p>
                                                    </div>
                                                </a>
                                                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                                                    <button class="btn btn-outline-dark">

                                                        <i class="bi-cart-fill me-1"></i> Add to Cart
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    break;
                                    count = 0;
                                }
                                count++;
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!-- Group Products End-->

    </main>
</body>
</html>


